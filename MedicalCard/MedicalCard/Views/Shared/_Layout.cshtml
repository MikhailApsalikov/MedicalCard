<!DOCTYPE html>
<html ng-app="medicalCardApp">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
	<link href="/Content/Pages/Main/main.css" rel="stylesheet" />
</head>
<body ng-controller="mainController">
	<nav class="navbar navbar-default without-margins">
		<div class="container-fluid">
			<!-- Brand and toggle get grouped for better mobile display -->
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a href="#/home" class="navbar-brand">Главная</a>
			</div>

			<!-- Collect the nav links, forms, and other content for toggling -->
			<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
				<ul class="nav navbar-nav">
					<li><a href="#/doctors">Доктора</a></li>
					<li><a href="#/patients">Пациенты</a></li>

				</ul>
				<ul class="nav navbar-nav navbar-right">
					<li class="dropdown">
						<a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Dropdown <span class="caret"></span></a>
						<ul class="dropdown-menu" role="menu">
							<li><a>Действия</a></li>
							<li><a>Another action</a></li>
							<li><a>Something else here</a></li>
							<li class="divider"></li>
							<li><a>Separated link</a></li>
						</ul>
					</li>

					<li><a ng-bind="user.name"></a></li>

					<li ng-if="!user.name"><a href="#/login">Войти</a></li>
					<li ng-if="user.name" ng-click="logout()"><a>Выход</a></li>
				</ul>
			</div><!-- /.navbar-collapse -->
		</div><!-- /.container-fluid -->
	</nav>
	<div class="main-logo">

	</div>
	<div class="container-fluid body-content">
		@RenderBody()
		<hr />
		<footer>
			<p>&copy; @DateTime.Now.Year - Medical Card</p>
		</footer>
	</div>

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/angular")
	@Scripts.Render("~/bundles/bootstrap")

	<script src="~/Scripts/app/app.js"></script>
	<script src="~/Scripts/app/config.js"></script>
	<script src="~/Scripts/app/controllers/doctors/doctors.js"></script>
	<script src="~/Scripts/app/controllers/doctors/edit.js"></script>
	<script src="~/Scripts/app/filters/searchFilter.js"></script>
	<script src="~/Scripts/app/services/modalService.js"></script>
	<script src="~/Scripts/app/services/Doctors.js"></script>
	<script src="~/Scripts/app/controllers/account/login.js"></script>
	<script src="~/Scripts/app/controllers/patients/patients.js"></script>
	<script src="~/Scripts/app/controllers/patients/edit.js"></script>
	@RenderSection("scripts", required: false)
</body>
</html>
